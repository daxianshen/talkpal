/* pages/getClass.wxss */

page{
  padding-bottom: 50px;
  box-sizing: border-box
}

image{
  display: block;
  width: 100%;
}
.detailbox:after{
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both
}
.detailbox{
  width: 100%;
  padding: 15px;
  box-sizing: border-box
}

.title,.tag{
  display: inline-block
}

.text,.number,.detail,.oprice,.nprice{
  float: left
}

.title,.text,.detail{
  width:80%;

}
.nprice,.oprice{
  width:20%
}



.title{
  font-size: 14px;
  overflow: hidden;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-right: 5px;
  box-sizing: border-box
}

.tag{
  width: 15%;
  vertical-align: top;
  font-size: 10px;
  color: #fff;
  background: #BA443F;
  text-align: center;
  padding: 2px 0;
  float: right
}

.nprice,.price{
  font-size: 18px;
  line-height: 18px;
  color: #BA443F;
  font-weight: 400;
}
.nprice{
  text-align: right
}

.oprice{
  font-size: 12px;
  text-align: right;
  text-decoration: line-through;
}

.detail{
  color: #ccc;
  font-size: 12px
}


.rulesbox{
  background: #f4f8fb;
  padding: 15px;
  box-sizing: border-box
}
.ruletitle{
  font-size: 15px;
  font-weight: bold;
  color: #2f517a
}

.rules view{
  font-size: 12px;
  color: #2f517a;
  margin: 5px 0
}

.price{
  display: inline-block;
  line-height: 40px;
  font-weight: bold
}
.create_group{
  width: 60%;
  height: 40px;
  line-height: 40px;
  font-size: 12px;
  color: #fff;
  background: #BA443F;
  float: right;
  text-align: center;
  border-radius: 5px
}

.create{
  padding: 5px 10px;
  width: 100%;
  border-top: 1px solid #eee;
  box-sizing: border-box;
  position: fixed;
  bottom :0;
  left: 0;
  background: #fff;
  z-index: 100
}

input,label{
  display: inline-block;
  height: 100%
}
.address{
  width: 75%
}

.section{
  padding: 5px 10px;
  font-size: 0.7rem;
  line-height: 40px;
  box-sizing: border-box;
  border-bottom: 1px solid #f4f4f4;
  height: 50px
}
label{
  margin-right: 5px;
  vertical-align: top;
}

form{
  display: block;
  background: #f4f4f4;
  padding: 10px;
}
.formbox{
  border-radius: 5px;
  background: #fff
}



