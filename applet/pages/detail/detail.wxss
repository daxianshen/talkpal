/* pages/detail/detail.wxss */

page{
  padding-bottom: 55px;
  box-sizing: border-box
}

.good:after,.gooddetail:after,.members:after,.bbox:after{
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both
}
.good{
  margin: 10px;
  box-shadow: 0 0 15px #aaa;
  padding: 10px;
  border-radius: 5px
}
.goodpic{
  width: 25%;
  height: 100px;
  float: left;
  margin-top: 5px
}
.detailbox{
  width: 75%;
  padding-left: 5%;
  box-sizing: border-box;
  float: left
}
.tag,.oprice,.nprice{
  display: inline-block;
  margin-right: 5px
}

.tag{
   margin-top: 5px
}

.title{
  font-size: 14px;
  font-weight: bold;
}

.tag{
  vertical-align: top;
  font-size: 10px;
  color: #fff;
  background: #BA443F;
  text-align: center;
  padding: 2px 4px;
  border-radius: 2px
}

.nprice,.price{
  font-size: 18px;
  line-height: 18px;
  color: #BA443F;
  font-weight: 400;
}
.nprice{
  text-align: right
}

.oprice{
  font-size: 12px;
  text-align: right;
  text-decoration: line-through;
}
.detail{
  color: #ccc;
  font-size: 12px
}

.booking,.booked,.share{
  margin-right: 10px;
  font-weight: bold
}

.booking,.booked{
  font-size: 16px;
}
.booking{
  color: #eaa621;
}

.booked{
  color: #40dd60;
}

.share{
  font-size: 18px
}

.tip{
  font-size: 12px
}

.members{
  position: relative
}
.member{
  width: 50px;
  height: 50px;
  margin: 5px;
  float: left;
  border-radius: 50%;
  overflow: hidden
}

.member image{
  width: 100%;
  height: 100%;
}

.tag2{
  width: 40px;
  border-radius: 10px;
  font-size: 9px;
  background: #BA443F;
  color: #fff;
  text-align: center;
  position: absolute;
  top: 45px;
  left: 10px;
}

.desc{
  margin: 20px;
  font-size: 12px
}
.desc view{
  margin-bottom: 10px
}



input,label{
  display: inline-block;
  height: 100%
}

label {
  margin-right:5px;
  vertical-align:top;
}


.info,form{
  background: #f4f4f4;
  padding: 10px;
}

form{
  display: block;
  padding-top: 0
}

.infobox,.formbox{
  border-radius: 5px;
  background: #fff;
}
.info-item,.section{
  padding: 0 10px;
  font-size: 0.7rem;
  line-height: 40px;
  box-sizing: border-box;
  border-bottom: 1px solid #f4f4f4;
  height: 40px;
}
.info-item:last-child{
  border: none
}



.location,.address{
  display: inline-block;
}
.location{
  width: 15px;
  height: 15px;
  vertical-align: middle
}

.address{
  margin-left: 5px;
}



.button,.pay{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  text-align:center;
  font-size: 12px;
  z-index: 100
}

button:after{
  border:none;
}

.begin,.invite1,.invite2,.pay{
  padding: 15px 0;
  color: #fff;
  line-height: 1;
  border-radius: 0;
  font-size: 12px;
}

.invite1,.begin{
  width: 50%;
  float: left;
}
.begin{
  background:#BA443F;
}
.pay{
  background:#51a938;
}
.invite1,.invite2{
  background: #ff7373;
}