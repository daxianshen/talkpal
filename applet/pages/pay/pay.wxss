/* pages/pay/pay.wxss */

.good:after,.gooddetail:after{
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both
}
.good{
  margin: 10px;
  box-shadow: 0 0 15px #aaa;
  padding: 10px;
  border-radius: 5px
}
.goodpic{
  width: 25%;
  height: 80px;
  float: left;
}
.detailbox{
  width: 75%;
  padding-left: 5%;
  box-sizing: border-box;
  float: left
}
.tag,.oprice,.nprice{
  display: inline-block;
  margin-top: 5px;
  margin-right: 5px
}

.title,.head,.address{
  font-size: 14px;
  font-weight: bold;
}

.tag{
  vertical-align: top;
  font-size: 10px;
  color: #fff;
  background: #BA443F;
  text-align: center;
  padding: 2px 4px;
  border-radius: 2px
}

.nprice,.price{
  font-size: 18px;
  line-height: 18px;
  color: #BA443F;
  font-weight: 400;
}
.nprice{
  text-align: right
}

.oprice{
  font-size: 12px;
  text-align: right;
  text-decoration: line-through;
}

.detail,.detailtitle,.detailprice{
  color: #ccc;
  font-size: 12px
}

.detailtitle,.detailprice{
  float: left;
  border-bottom: 1px solid #eee;
  padding-bottom: 5px;
  margin-top: 20px
}

.detailtitle{
  width: 90%
}
.detailprice{
  width: 10%;
  text-align: right
}

.location,.address{
  display: inline-block;
}
.location,.payicon{
  width: 15px;
  height: 15px;
  vertical-align: middle
}

.gooddetail{
  padding: 0 20px;
  margin-top: 20px
}

.address{
  margin-top: 20px;
  margin-left: 5px;
}

.kid{
  font-size: 11px;
  margin-left: 20px;
}

.tips{
  font-size: 10px;
  color: #ccc;
  margin-top: 10px
}
.paybox{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  background: #51a938;
  padding: 15px 0
}
.pay{
  font-size: 12px;
  color: #fff;
}
